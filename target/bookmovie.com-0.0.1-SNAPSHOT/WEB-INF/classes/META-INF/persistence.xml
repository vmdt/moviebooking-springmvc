<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="persistence-data">
        <class>com.bookmovie.entity.UserEntity</class>
        <class>com.bookmovie.entity.RoleEntity</class>
        <class>com.bookmovie.entity.MovieEntity</class>
        <class>com.bookmovie.entity.SeatEntity</class>
        <class>com.bookmovie.entity.BookingEntity</class>
        <class>com.bookmovie.entity.BookingDetailsEntity</class>
        <class>com.bookmovie.entity.NationEntity</class>
        <class>com.bookmovie.entity.MovieTypeEntity</class>
        <class>com.bookmovie.entity.FeedbackEntity</class>
        <class>com.bookmovie.entity.ShowTimingEntity</class>
        <properties>
        	<property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>